<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:foregroundTint="@color/three"
    tools:context=".MessageActivity">

    <!--page title-->
    <TextView
        android:id="@+id/imageTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserrat"
        android:text="Correspondence"
        android:textColor="@color/four"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--divider image-->
    <ImageView
        android:id="@+id/imageDividerImage"
        android:layout_width="345dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/divider" />

    <!--preview button-->
    <Button
        android:id="@+id/messagePreviewButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="656dp"
        android:backgroundTint="@color/four"
        android:fontFamily="@font/montserrat_light"
        android:text="Preview"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--decoration image-->
    <ImageView
        android:id="@+id/stampFlowersImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="620dp"
        android:rotation="-15"
        android:rotationY="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flowers" />

    <!--message input backrgound-->
    <ImageView
        android:id="@+id/messageEntryImage"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="224dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/message_entry" />

    <!--message input-->
    <EditText
        android:id="@+id/messageEntry"
        android:layout_width="260dp"
        android:layout_height="190dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/two"
        android:fontFamily="@font/hachi_maru_pop"
        android:gravity="start|top"
        android:hint="(max 5 lines)"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="10sp"
        android:maxLines="5"
        android:overScrollMode="ifContentScrolls"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messageEntryImage" />

    <!--message title-->
    <TextView
        android:id="@+id/messageTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="268dp"
        android:fontFamily="@font/montserrat_light"
        android:text="message:"
        android:textColor="@color/four"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--greeting title-->
    <TextView
        android:id="@+id/greetingSpinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/montserrat_light"
        android:text="greeting:"
        android:textColor="@color/four"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--greeting spinner-->
    <Spinner
        android:id="@+id/greetingSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@color/two"
        android:dropDownSelector="@color/two"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:popupBackground="@color/two"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDividerImage" />

    <!--sign off title-->
    <TextView
        android:id="@+id/signoffSpinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="556dp"
        android:fontFamily="@font/montserrat_light"
        android:text="sign-off:"
        android:textColor="@color/four"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--signoff spinner-->
    <Spinner
        android:id="@+id/signoffSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="428dp"
        android:background="@color/two"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:popupBackground="@color/two"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDividerImage" />


</androidx.constraintlayout.widget.ConstraintLayout>